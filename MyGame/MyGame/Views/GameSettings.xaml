<Window x:Class="MyGame.Views.GameSettings"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MyGame.Views"
        mc:Ignorable="d"
        Title="Game Settings" Height="450" Width="400">
        
    <Window.Background>
        <ImageBrush ImageSource="C:\Users\Jespinoza\source\repos\PokeEmu\Game\MyGame\MyGame\Resources\SSBackground.png"/>
    </Window.Background>
    <StackPanel Orientation="Vertical" VerticalAlignment="Top">
        <TextBlock Text="PokeEmu" HorizontalAlignment="Center" FontSize="40"/>
        <StackPanel Margin="0 10">
            <Label>Player 1:</Label>
            <TextBox Text="{Binding Game.PlayerName, UpdateSourceTrigger=PropertyChanged}" />
        </StackPanel>
        <StackPanel Margin="0 10" Orientation="Horizontal" VerticalAlignment="Top">
        </StackPanel>
        <Button Command="{Binding UpdateCommand}">Start</Button>
    </StackPanel>
</Window>
